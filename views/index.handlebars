<h1 class = "mt-3 mb-3">Eat-Da-Burger</h1>
<img src="/assets/img/burger-svgrepo-com.svg" alt="Burger" width="128" height="128" class = "mb-3">
<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
            Devour !
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-sm mb-5">
      <h2>Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2 class="mt-5">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger : </label>
    <input type="text" id="bg" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>