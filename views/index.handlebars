<h1>Eat-Da-Burger</h1>

<h2>Not Devour</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	{{burger_name}}
	<button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
	    Devour!
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devour</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
       <li>
	{{burger_name}} 
       </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger : </label>
    <input type="text" id="bg" name="name">
  </div>
  <button type="submit">Add Burber</button>
</form>
